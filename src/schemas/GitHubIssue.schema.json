{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitHubIssue",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier for the issue"
    },
    "number": {
      "type": "integer",
      "description": "Issue number in the repository"
    },
    "title": {
      "type": "string",
      "description": "Issue title"
    },
    "body": {
      "type": "string",
      "description": "Issue description/body"
    },
    "state": {
      "type": "string",
      "enum": ["open", "closed"],
      "description": "Current state of the issue"
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Labels assigned to the issue"
    },
    "assignees": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Users assigned to the issue"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the issue was created"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the issue was last updated"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL to the issue on GitHub"
    }
  },
  "required": ["id", "number", "title", "state", "labels", "assignees", "createdAt", "updatedAt", "url"],
  "additionalProperties": false
}
